page {
  background-color: #e9e9e9;
}

text {
  color: #333;
  font-size: 30rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 推荐商品 */
.view-recommended {
  display: flex;
  width: 100%;
  height: auto;
  flex-direction: row;
  background-color: #fff;
  padding: 0 40rpx 20rpx 40rpx;
  flex-flow: wrap;
}

.view-recommended-view {
  display: flex;
  flex-direction: column;
  width: 42%;
  height: auto;
  margin-top: 10rpx;
  /* box-shadow:4rpx 4rpx 6rpx #999; */
}

.view-recommended-item {
  display: flex;
  width: 100%;
  height: 200rpx;
  margin-top: 10rpx;
}

.view-recommended-item-margin {
  width: 5%;
}

.view-recommended-item-left {
  display: flex;
  width: 200rpx;
  height: 200rpx;
  padding-right: 3rpx;
}

.view-recommended-item-right {
  display: flex;
  width: 100rpx;
  flex-direction: column;
  height: 200rpx;
}

.view-recommended-item-right-top, .view-recommended-item-right-bottom {
  display: flex;
  flex: 1;
}

.view-recommended-item-right-bottom {
  margin-top: 2rpx;
}

.image-recommended {
  width: 100%;
  height: 100%;
}