<!--index.wxml-->
<view class="bodyView">
  <!-- banner图片 -->
  <view class="bannerView">
   <swiper indicator-dots="{{indicatorDots}}" indicator-color="rgba(255, 255, 255, .5)" indicator-active-color='#ff8200'
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"
      circular="{{circular}}" style="width: 750rpx;height: 375rpx;"
    > 
    <block wx:for="{{bannerList}}" wx:key="item.productId">
       <swiper-item>
        <image src="{{item.image}}" style="width: 750rpx;height: 375rpx;" mode="aspectFill" bindtap='toProductInfo' data-id="{{item.productId}}" />
       </swiper-item>
    </block>
   </swiper>
  </view>

  <view class="ppView">
    <text class="ppText">品牌街</text>
  </view>

   <view class='ppImageView'>
    <block wx:for="{{imgUrls}}">
      <view class="ppImageItemView">
        <image src="{{item}}" class="ppImage"/>
      </view>
    </block>
  </view>

  <view class="ppView">
    <text class="ppText">店家推荐</text>
  </view>

  <view class="tjImageView">
    <block wx:for="{{imgUrls}}">
      <view class="tjImageItemView" bindtap='toPage'>
        <image src="{{item}}" class="maxImage" />
      </view>
    </block>

  </view>

</view>
