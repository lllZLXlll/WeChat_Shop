page {
  background-color: #e9e9e9;
}

text {
  color: #333;
  font-size: 30rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 选项卡  */
.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
  border-bottom-width: 1rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  display: flex;  
  flex-direction: row;
  align-items: center;
  background-color:#fff;
} 

.swiper-tab-list{  
  font-size: 32rpx;  
  display: inline-block;  
  width: 33.33%;  
  color: #999;
} 

.swiper-tab-list-image{  
  font-size: 32rpx;  
  display: flex;  
  width: 33.33%;  
  color: #999;
  flex-direction: row;
  justify-content: center;
  align-items: center;
} 

.sortImageClass {
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.on{ 
  color: #333;  
  border-bottom: 5rpx solid #ff8200;
} 

.productItemView {
  width: 100%;
  height: 230rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.productItemleft {
  display: flex;
  flex: 1;
}

.productImage {
  width: 100%;
  height: 100%;
}

.productItemRight {
  display: flex;
  flex-direction: column;
  flex: 2;
  margin-left: 15rpx;
  border-top-width: 1rpx;
  border-top-color: #eee;
  border-top-style: solid;
}

.productTitleView2 {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  padding-right: 15rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: flex;
  flex: 2.5;
}

.productInfo {
  font-size: 30rpx;
  color: #999;
  margin-top: 0;
  margin-bottom: 0;
}

.productPriceView {
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
}

.priceView2 {
  display: flex;
  flex: 1;
  padding-left: 0;
}

.productBottomView1 {
  flex-direction: row;
  display: flex;
  flex: 1;
}

.proceMinText {
  color: red;
  font-size: 26rpx;
  display: flex;
  align-self: flex-end;
}

.proceText {
  color: red;
  font-size: 32rpx;
  display: flex;
  align-items: flex-end;
}

.productBottomView2 {
  display: flex;
  padding-right: 20rpx;
}

.productImage {
  width: 100%;
  height: 100%;
}

.view-item {
  display: flex;
  flex-direction: row;
  height: 70rpx;
  background-color: #fff;
  padding: 0 20rpx 0 20rpx;
  align-items: center;
  border-top-width: 1rpx;
  border-top-color: #e9e9e9;
  border-top-style: solid;
}

.text-red {
  color: red;
}

.text-left {
  display: flex;
  flex: 1;
  align-items: center;
}

.text-right {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
}

.countText {
  margin-left: 20rpx;
  color: red;
  font-size: 30rpx;
  display: flex;
  align-self: flex-end;
}