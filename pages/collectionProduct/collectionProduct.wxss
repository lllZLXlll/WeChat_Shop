::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bodyView {
  display: flex;
  flex: 1;
}

.topView {
  width: 100%; 
  z-index: 1;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
}

.searchView {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.searchInputView {
  flex: 7;
  height: 60rpx;
  background-color: #e9e9e9;
  border-radius: 30rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
}

.searchInput {
  height: 60rpx;
  font-size: 32rpx;
  justify-content: center;
}

.classificationView {
  display: flex;
  flex: 1.5;
  align-items: center;
  justify-content: center;
}

.classificationImageClass {
  width: 50rpx;
  height: 50rpx;
}

/* 选项卡  */

.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
  border-bottom-width: 1rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  display: flex;  
  flex-direction: row;
  align-items: center;
}  

.swiper-tab-list{  
  font-size: 32rpx;  
  display: inline-block;  
  width: 33.33%;  
  color: #999;
} 

.swiper-tab-list-image{  
  font-size: 32rpx;  
  display: flex;  
  width: 33.33%;  
  color: #999;
  flex-direction: row;
  justify-content: center;
  align-items: center;
} 

.sortImageClass {
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.on{ 
  color: #333;  
  border-bottom: 5rpx solid #ff8200;
}  
  
.swiper-box{ 
  display: flex; 
  flex: 1;
  width: 100%; 
  overflow: hidden; 
}  

/* 商品列表item */
.contentView {
  background-color: #f5f5f5;
  width: 100%;
}

.productView {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-flow: wrap;
}

.marginView {
  width: 10rpx;
}

/* 布局1  */
.productItemView {
  margin-bottom: 10rpx;
  width: 49.3%;
  height: 450rpx;
  background-color: #fff;
  border-radius: 20rpx;
  position:relative;
  z-index: 10;
}

.productImageView {
  width: 100%;
  height: 330rpx;
}

.productImage {
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
}

.productTitleView {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow: ellipsis;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.productPriceView {
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
}

.proceMinText {
  color: red;
  font-size: 26rpx;
  display: flex;
  align-self: flex-end;
}

.proceText {
  color: red;
  font-size: 32rpx;
  display: flex;
  align-items: flex-end;
}

.countText {
  margin-left: 20rpx;
  color: #999;
  font-size: 22rpx;
  display: flex;
  align-self: flex-end;
}

.shoppingCartClass {
  width: 35rpx;
  height: 35rpx;
  display: flex;
  align-self: flex-end;
}

.productBottomView1 {
  flex-direction: row;
  display: flex;
  flex: 1;
}

.productBottomView2 {
  display: flex;
  flex: 3;
}

.productBottomView3 {
  display: flex;
  flex: 1;
}

/* 底部view  */
.footerView {
  display: flex;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
}

.toTopView {
  position: fixed;
  bottom: 110rpx;
  right: 20rpx;
  width: 75rpx;
  height: 75rpx;
  background-color: #fff;
  border-radius: 45rpx;
  border-color: #e9e9e9;
  border-width: 1rpx;
  border-style: solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottomIcon {
  width: 45rpx;
  height: 45rpx;
}

/* 侧边栏效果样式  */
.page-top {
  width: 100%;
  background-color: #fff;
  z-index: 1;
  box-shadow: -5rpx -1rpx 10rpx #999;
}

.page-bottom {
  width: 100%;
  height: 100%;
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
}

.page-content {
  display: flex;
  flex: 4;
  flex-direction: column;
  background-color: #f5f5f5;
  
}

.page-right {
  display: flex;
  flex: 6;
  background-color: #000;
  opacity: 0.3;
}

.page-content-itemView {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  font-size: 34rpx;
  color: #333;
  border-bottom-color: #eee;
  border-bottom-width: 1rpx;
  border-bottom-style: solid;
}

.selectClassText {
  color: #ff8200;
}

.page-btn {
  display: flex;
  width: 40%;
  height: 80rpx;
  background-color: #ff8200;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}

/* 长按删除遮罩 */
.view-delete {
  position:absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 100;
  border-radius: 20rpx;
}

.view-delete-btn {
  position:absolute;
  top: 50%;
  left: 50%;
  width: 120rpx;
  height: 120rpx;
  border-radius: 90rpx;
  background-color: red;
  margin-left: -60rpx;
  margin-top: -60rpx;
  z-index: 100;
}

.view-delete-text {
  color: #fff;
  font-size: 32rpx;
  position:absolute;
  width: 64rpx;
  height: 42rpx;
  left:50%;
  top:50%;
  margin-top: -21rpx;
  margin-left: -32rpx
}