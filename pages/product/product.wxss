/**index.wxss**/
.bodyView {
  
}

.searchView {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.searchInputView {
  flex: 7;
  height: 60rpx;
  background-color: #e9e9e9;
  border-radius: 30rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
}

.searchInput {
  height: 60rpx;
  font-size: 32rpx;
  justify-content: center;
}

.classificationView {
  display: flex;
  flex: 1.5;
  align-items: center;
  justify-content: center;
}

.classificationImageClass {
  width: 50rpx;
  height: 50rpx;
}

/* 选项卡  */
.tabView {
  width: 100%;
  height: 100%;
}

.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
  font-size: 32rpx;  
  display: inline-block;  
  width: 33.33%;  
  color: #999;  
}  
.on{ 
  color: #333;  
  border-bottom: 5rpx solid #ff8200;
}  
  
.swiper-box{ 
  display: flex; 
  flex: 1;
  height: 900rpx; 
  width: 100%; 
  overflow: hidden; 
}  

/* 商品列表item */
.productItemView {
  width: 50%;
  height: 450rpx;
  padding-right: 8rpx;
}

.productImageView {
  width: 100%;
  height: 330rpx;
}

.productImage {
  width: 100%;
  height: 100%;
}

.productTitleView {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow: ellipsis;
  padding-left: 10rpx;
}

.productPriceView {
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
}

.proceMinText {
  color: red;
  font-size: 26rpx;
  display: flex;
  align-self: flex-end;
}

.proceText {
  color: red;
  font-size: 34rpx;
  align-self: flex-end;
}

.countText {
  margin-left: 20rpx;
  color: #999;
  font-size: 26rpx;
  align-self: flex-end;
}