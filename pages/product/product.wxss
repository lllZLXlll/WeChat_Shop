/**index.wxss**/
.bodyView {
  width: 100%;
  height: 100%;
}

.topView {
  width: 100%; 
  z-index: 1;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
}

.searchView {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.searchInputView {
  flex: 7;
  height: 60rpx;
  background-color: #e9e9e9;
  border-radius: 30rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
}

.searchInput {
  height: 60rpx;
  font-size: 32rpx;
  justify-content: center;
}

.classificationView {
  display: flex;
  flex: 1.5;
  align-items: center;
  justify-content: center;
}

.classificationImageClass {
  width: 50rpx;
  height: 50rpx;
}

/* 选项卡  */

.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
  font-size: 32rpx;  
  display: inline-block;  
  width: 33.33%;  
  color: #999;  
}  
.on{ 
  color: #333;  
  border-bottom: 5rpx solid #ff8200;
}  
  
.swiper-box{ 
  display: flex; 
  flex: 1;
  width: 100%; 
  overflow: hidden; 
}  

/* 商品列表item */
.contentView {
  display: flex;
  flex: 1;
  background-color: #e9e9e9;
  width: 100%;
  height: 1000rpx;
  margin-top: 160rpx;
}

.productView {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-flow: wrap;
}

.marginView {
  width: 10rpx;
}

.productItemView {
  margin-bottom: 10rpx;
  width: 49.3%;
  height: 450rpx;
  background-color: #fff;
}

.productImageView {
  width: 100%;
  height: 330rpx;
}

.productImage {
  width: 100%;
  height: 100%;
}

.productTitleView {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow: ellipsis;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.productPriceView {
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
}

.proceMinText {
  color: red;
  font-size: 26rpx;
  display: flex;
  align-self: flex-end;
}

.proceText {
  color: red;
  font-size: 32rpx;
  display: flex;
  align-items: flex-end;
}

.countText {
  margin-left: 20rpx;
  color: #999;
  font-size: 22rpx;
  display: flex;
  align-self: flex-end;
}

.shoppingCartClass {
  width: 35rpx;
  height: 35rpx;
  display: flex;
  align-self: flex-end;
}

.productBottomView1 {
  flex-direction: row;
  display: flex;
  flex: 1;
}

.productBottomView2 {
  display: flex;
  flex: 3;
}

.productBottomView3 {
  display: flex;
  flex: 1;
}

/* 底部view  */
.footerView {
  display: flex;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
}

.toTopView {
  position: fixed;
  bottom: 110rpx;
  right: 20rpx;
  width: 75rpx;
  height: 75rpx;
  background-color: #fff;
  border-radius: 45rpx;
  border-color: #e9e9e9;
  border-width: 1rpx;
  border-style: solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottomIcon {
  width: 45rpx;
  height: 45rpx;
}

/* 侧边栏效果样式  */
.page-top {
  width: 100%;
  background-color: #fff;
  z-index: 1;
  box-shadow: -5rpx -1rpx 10rpx #999;
}

.page-bottom {
  width: 100%;
  height: 100%;
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
}

.page-content {
  display: flex;
  flex: 4;
  flex-direction: column;
  background-color: #fff;
  
}

.page-right {
  display: flex;
  flex: 6;
  background-color: #000;
  opacity: 0.2;
}


