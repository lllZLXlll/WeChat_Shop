
<!--product.wxml-->
<view class="bodyView">
  <view class="searchView">
    <view class="classificationView" bindtap="classClick">
      <image src="{{classificationImage}}" class="classificationImageClass" />
    </view> 
    <view class="searchInputView">
      <input placeholder="输入商品名称" class="searchInput" auto-focus/>
    </view>
    <view class="classificationView" bindtap="searchClick">
      <image src="{{searchImage}}" class="classificationImageClass" />
    </view>
  </view>

   <!-- 选项卡切换  -->
    <scroll-view>
      <view class="swiper-tab">  
        <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>  
        <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">销量</view>  
        <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">价格</view>  
      </view>  
    </scroll-view>
   
    <view class="contentView" >
      <view wx:if="{{currentTab == 0}}" class="productView">
        <block wx:for="{{productData}}" wx:key="{{item.id}}" >
          <view class="productItemView">
            <view class="productImageView">
              <image src="{{item.image}}" class="productImage" mode="aspectFill" />
            </view>
            <view class="productTitleView">
              <text>{{item.productTitle}}</text>
            </view>
            <view class="productPriceView">
              <view class="productBottomView1">
                <text class="proceMinText">￥</text>
                <text class="proceText">{{item.price}}</text>
              </view> 
              <view class="productBottomView2"><text class="countText">{{item.count}}</text></view> 
              <view class="productBottomView3"><image src="../../images/product/icon_shoppingCart.png" class="shoppingCartClass"/></view> 
            </view>
          </view>
          <view wx:if="{{index % 2 == 0}}">
            <view class="marginView" />
          </view>
        </block> 
      </view>
      
    </view>   
  

</view>
