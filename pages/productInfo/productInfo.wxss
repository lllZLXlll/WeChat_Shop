
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bodyView {
  width: 100%;
  height: 100%;
  background-color: #e9e9e9;  
}

.swiper {
  width: 100%;
  height: 600rpx;
}

.maxImage {
  width: 100%; 
  height: 600rpx;
}

.productContentView {
  width: 100%;
  height: 100%;
}

.productInfoView {
  /* width: 100%; */
  height: 210rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx; 
  padding-top: 10rpx;
}

.productTitle {
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow: ellipsis;
  padding-right: 20rpx; 
}

.productPrice {
  color: red;
  font-size: 36rpx;
}

.productPriceMin {
  font-size: 30rpx;
}

.productShowPrice {
  color: #999;
  font-size: 30rpx;
  text-decoration: line-through;
}

.productInfoBottomView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

 .productBottomText {
  display: flex;
  flex: 1;
  justify-content: flex-start;
  color: #999;
  font-size: 30rpx;
 }

 .textLeft {
  display: flex;
  flex: 1;
  justify-content: flex-start;
 }

.icon_image {
  width: 36rpx;
  height: 36rpx;
}

.icon_text {
  color: #999;
  font-size: 30rpx;
  padding-left: 10rpx; 
}

.renzheng { 
  align-items: center;
  justify-content: flex-start;
}

.renzhengMargin {
  margin-top: 10rpx;
}

/* 选择产品  */
.selectView {
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
}

.selectItemView {
  display: flex;
  flex: 1;
  flex-direction: row;
  height: 90rpx;
  padding-left: 20rpx;
  padding-right: 20rpx; 
  align-items: center;
}

.selectBorder {
  border-bottom-width: 1rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
}

.selectText {
  color: #333;
  font-size: 30rpx;
  display: flex;
  flex: 1;
}

.imageTextInfoView {
  width: 100%;
  display: flex;
  margin-top: 10rpx;
  /* margin-bottom: 10rpx; */
  justify-content: center;
  flex-direction: column;
}

.imageTextTitle {
  color: #999;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}

.tjImageView {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.tjImageItemView {
  display: flex;
  flex: 1;
}

.bottomView {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}

/* footer 底部  */
.footerView {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
}

.footerItemView {
  display: flex;
  flex: 2;
}
.footerItemView2 {
  flex: 3;
}

.itemView {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 26rpx;
  color: #999;
  align-items: center;
}

.iconImage {
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
}

.btnItemView {
  display: flex;
  flex: 1;
  background-color: red;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
}

.viewColor {
  background-color: #ff8200;
}

/* 选择、分类、参数 */
.page-bottom {
  width: 100%;
  height: 100%;
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.page-content {
  display: flex;
  flex: 8;
  flex-direction: column;
  background-color: #fff;
}

.page-bg {
  display: flex;
  flex: 2;
  background-color: #000;
  opacity: 0.3;
}

.page-btn {
  width: 100%;
  height: 100rpx;
  background-color: #ff8200;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
}

.page-Title {
  background-color: #fff;
  color: #000;
  height: 80rpx;
}

.page-itemView {
  display: flex;
  min-height: 60rpx; 
  flex-direction: row;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-top-width: 1rpx;
  border-top-color: #eee;
  border-top-style: solid;
}

.page-leftView {
  width: 30%;
  font-size: 30rpx;
  color: #999;  
  text-align: left;
  margin: auto 0;
}

.page-rightView {
  width: 68%;
  color: #000;
  margin-left: 2%;
}
