/**index.wxss**/
.bodyView {
  width: 100%;
  height: 100%;
  background-color: #e9e9e9;  
}

.swiper {
  width: 100%;
  height: 600rpx;
}

.maxImage {
  width: 100%; 
  height: 600rpx;
}

.bannerView {

}

.productContentView {
  width: 100%;
  height: 100%;
}

.productInfoView {
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
}

.productTitle {
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.productPrice {
  color: red;
  font-size: 36rpx;
}

.productPriceMin {
  font-size: 30rpx;
}

.productShowPrice {
  color: #999;
  font-size: 30rpx;
  text-decoration: line-through;
}

.productInfoBottomView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}

 .productBottomText {
  display: flex;
  flex: 1;
  justify-content: flex-start;
  color: #999;
  font-size: 30rpx;
 }

 .textLeft {
  display: flex;
  flex: 1;
  justify-content: flex-start;
 }

.icon_image {
  width: 36rpx;
  height: 36rpx;
}

.icon_text {
  color: #999;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.renzheng { 
  align-items: center;
  justify-content: flex-start;
}

.renzhengMargin {
  margin-top: 10rpx;
}

/* 选择产品  */
.selectView {
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
}

.selectItemView {
  display: flex;
  flex: 1;
  flex-direction: row;
  height: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  align-items: center;
}

.selectBorder {
  border-bottom-width: 1rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
}

.selectText {
  color: #333;
  font-size: 30rpx;
  display: flex;
  flex: 1;
}