.bodyView {
  
}

.swiper {
  width: 100%;
  height: 600rpx;
}

.maxImage {
  width: 100%; 
  height: 600rpx;
}

.bannerView {
  margin-bottom: 10rpx;
}

.productContentView {
  width: 100%;
  height: 500rpx;
  background-color: #e9e9e9;
}

.productInfoView {
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.productTitle {
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow: ellipsis;
  padding-right: 20rpx;
}

.productPrice {
  color: red;
  font-size: 36rpx;
}

.productPriceMin {
  font-size: 30rpx;
}

.productShowPrice {
  color: #999;
  font-size: 30rpx;
  text-decoration: line-through;
}

.productInfoBottomView {
  display: flex;
  flex-direction: row;
  align-items: center;
}

 .productBottomText {
  display: flex;
  flex: 1;
  justify-content: center;
  color: #999;
  font-size: 30rpx;
 }

 .textLeft {
  display: flex;
  flex: 1;
  justify-content: flex-start;
 }

