::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 选择、分类、参数 */
.page-bottom {
  width: 100%;
  height: 100%;
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.page-content {
  display: flex;
  flex: 8;
  flex-direction: column;
  background-color: #fff;
}

.page-bg {
  display: flex;
  flex: 2;
  background-color: #000;
  opacity: 0.3;
}

.page-btn {
  width: 100%;
  height: 100rpx;
  background-color: #ff8200;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
}

.page-Title {
  background-color: #fff;
  color: #000;
  height: 80rpx;
}

.page-itemView {
  display: flex;
  min-height: 60rpx; 
  flex-direction: row;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-top-width: 1rpx;
  border-top-color: #eee;
  border-top-style: solid;
}

.page-leftView {
  width: 30%;
  font-size: 30rpx;
  color: #999;  
  text-align: left;
  margin: auto 0;
}

.page-rightView {
  width: 68%;
  color: #000;
  margin-left: 2%;
}
